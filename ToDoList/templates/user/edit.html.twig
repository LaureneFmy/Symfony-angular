{% extends 'base.html.twig' %}

<style>
    th, td {
        padding: 10px;
    }
    th {
        text-align: right;
    }
</style>

<h1>Create or Update User</h1>

{{ form_start(form) }}

<table>
    <tbody>
    <tr>
        <th>Title:</th>
        <td>{{ form_widget(form.name) }}</td>
    </tr>
    <tr>
        <th>Author:</th>
        <td>{{ form_widget(form.email) }}</td>
    </tr>
    <tr>
        <th>Article Body:</th>
        <td>{{ form_widget(form.password) }}</td>
    </tr>
    <tr>
        <th></th>
        <td>{{ form_widget(form.save) }}</td>
    </tr>
    </tbody>
</table>

{{ form_end(form) }}